/* pages/movies/movies.wxss */
.moviesContainer{
  display: flex;
  flex-direction:row;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}
.movieImg{
  width: 128rpx;
  height: 128rpx;
}
.movie_detail{
  width: 70%;
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}
.movie_name{
  font-size: 38rpx;
  white-space: nowrap;
  width: 70%;
  overflow: hidden;
  text-overflow: ellipsis;
}
.movie_year{
  font-size: 28rpx;
}
.movie_director{
  font-size: 32rpx;
}
.movie_rating{
  font-size: 38rpx;
  font-weight: bold;
  color: rgb(255, 0, 0)
}
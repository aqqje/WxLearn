/* pages/movieDetail/movieDetail.wxss */
.movieDetailContainer{
  display: flex;
  flex-direction: column;
  align-items: center;
  
}
.movieImg{
  margin: 5% 0;
  width: 70%;
  height: 700rpx;
}
.movie_name{
  font-size: 42rpx;
  width: 70%;
  font-weight: bold;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.movie_detail{
  margin-top: 5%;  
  display: flex;
  width: 70%;
  line-height: 50rpx;
  flex-direction: column;
  font-size: 32rpx;
  height: auto
}
.movie_casts{
  display: flex;
  white-space: nowrap;
  flex-direction: row;
  font-size: 32rpx;
  height: auto;
  width: 70%;
  overflow: hidden;
  text-overflow: ellipsis;
}
button{
  margin-top: 5%;
  background: green;
  color: #fff;
  width: 70%;
  height: 80rpx;
  line-height: 80rpx;
}